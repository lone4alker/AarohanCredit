# MSME Credit Intelligence Platform - Environment Variables Reference

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=MSME Credit Intelligence Platform
API_VERSION=1.0.0

# Database Settings
DB_PATH=data/policies.db
DATA_DIR=data

# Agent Settings
AGENT_TIMEOUT=300
MAX_RETRIES=3

# Scoring Weights
FINANCIAL_HEALTH_WEIGHT=0.3
BEHAVIORAL_SCORE_WEIGHT=0.4
POLICY_MATCH_WEIGHT=0.3

# LLM Settings (Gemini via LangChain)
GEMINI_MODEL=gemini-pro
# Obtain API key from Google AI Studio (https://makersuite.google.com/)
GEMINI_API_KEY=your_gemini_api_key
LLM_TEMPERATURE=0.3

# Logging
LOG_LEVEL=INFO
# LOG_FILE=logs/app.log
